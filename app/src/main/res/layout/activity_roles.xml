<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.restock.ui.RolesActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/image_street"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.5" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHeader"
            android:text="ReStock"
            android:textSize="70sp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/colorPrimaryText"
            android:textColorHint="@color/colorPrimaryText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please select the following sections"
            android:id="@+id/textView2"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Restocking Supplier"
            android:id="@+id/bRestock"
            android:background="@color/accent_material_dark"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Food Truck Owner"
            android:id="@+id/bFoodtruck"
            android:layout_marginBottom="40dp"
            android:background="@color/accent_material_light"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
